<div class='row justify-content-md-center'>
  <div class='col-sm-6'>
    <%= form_with model: @new_user, url: register_path, local: true do |form| %>
      <section id="register">
      <div class='form-group'>
        <%= form.label :first_name, 'First Name: ' %>
        <%= form.text_field :first_name, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :last_name, 'Last Name: ' %>
        <%= form.text_field :last_name, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :email, 'Email Address: ' %>
        <%= form.text_field :email, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :password %>
        <%= form.password_field :password, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :password_confirmation, 'Confirm Password: ' %>
        <%= form.password_field :password_confirmation, required: true, class:'form-control' %>
      </div>
        <p><%= form.submit 'Register', class:'btn btn-primary' %></p>
      <% end %>
    </section>
  </div>
</div>
