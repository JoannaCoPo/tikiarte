<h2>Add kid to your account:</h2>
<div class='row justify-content-md-center'>
  <div class='col-sm-6'>
    <%= form_with model: @new_kid, url: "/user/kid/#{@new_kid.id}", local: true do |form| %>
      <section id="new">
      <div class='form-group'>
        <%= form.label :first_name, 'First Name: ' %>
        <%= form.text_field :first_name, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :last_name, 'Last Name: ' %>
        <%= form.text_field :last_name, required: true, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :email, 'Age: ' %>
        <%= form.text_field :age, required: false, class:'form-control' %>
      </div>
      <div class='form-group'>
        <%= form.label :password_confirmation, 'Location: ' %>
        <%= form.text_field :location, required: false, class:'form-control' %>
      </div>
        <p><%= form.submit 'Add Kiddo', class:'btn btn-primary' %></p>
      <% end %>
    </section>
  </div>
</div>
